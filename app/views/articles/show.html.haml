.article-container
  .header-content
    = image_tag @article.user.gravatar_url, class: 'user-avatar'
    %h2.article-title= @article.title
    %span.date 
      Creado el 
      = l @article.created_at
      por
    %span.username= @article.user.username 
  .info-article
    %span.leasson Leassons learned
    %p= @article.summary 
    .tags
      - @tags.each do |tag_name|
        %span.tag= tag_name
  .article-content
    %p= @article.content
  .feed
    -if @last_log
      %span 
        =link_to "Ultima modificaci√≥n", article_audit_path(@last_log)
        el
        = l @last_log.created_at
        por
        = @last_log.user.username
    -@logs.each do |l|
      %span 
        =link_to "Modificado", article_audit_path(l)
        el
        =l l.created_at
        por
        =l.user.username
  .buttons
    =link_to "New Comment", [:new, @commentable, :comment], class: "btn recomendar", remote: true
  .comments
    - @comments.each do |comment|
      .comment
        %b= comment.user.username
        = markdown comment.content
