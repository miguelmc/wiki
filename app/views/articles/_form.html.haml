= form_for(@article, html: {id: 'js-article-form'}) do |f|
  .title
    = f.label :title, t("articles.new.form.title")
    %br
    = f.text_field :title
  .summary
    = f.label :summary, t("articles.new.form.summary")
    %br
    = f.text_field :summary
  .content
    = f.label :content, t("articles.new.form.content")
    %br
    = f.text_area :content
  .tags
    = f.label :tag_list, "Tags (separated by commas)"
    %br
    = f.text_field :tag_list
  .category
    = f.label :category_id, t("articles.new.form.category")
    %br
    = f.collection_select :category_id, Category.all, :id, :name, prompt: t("articles.new.form.prompt")
  .submit
    = f.submit t("articles.new.form.submit")
  .preview
    =link_to "Preview", "javascript:void(0)", id: "js-preview"
#js-preview-container

