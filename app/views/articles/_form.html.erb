  <%= form_for(@article) do |f| %>
    <div><%= f.label :title, t("articles.new.form.title") %><br />
    <%= f.text_field :title %></div>

    <div><%= f.label :summary, t("articles.new.form.summary") %><br />
    <%= f.text_field :summary %></div>
    
    <div><%= f.label :content, t("articles.new.form.content") %><br />
    <%= f.text_area :content %></div>

    <div><%= f.label :tag_list, "Tags (separated by commas)" %><br />
    <script type="text/javascript">		
      $(function() {
        $('#article_tag_list').tagsInput();
      })
    </script>
    <%= f.text_field :tag_list %></div>

    <div><%= f.submit t("articles.new.form.submit")%></div>
  <% end %>
