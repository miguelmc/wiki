.login
  .login-container
    %h2 Login

    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      .username
        = f.text_field :username, :autofocus => true, :placeholder => "Usuario"

      .password
        = f.password_field :password, :placeholder => "ContraseÃ±a"

      - if devise_mapping.rememberable?
        .remember
          = f.check_box :remember_me 
          = f.label :remember_me

      .submit
        = f.submit t("users.session.form.submit")

    = render "devise/shared/links"
